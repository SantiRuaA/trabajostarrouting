<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Star⭐Routing - Crear usuario</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{> menu}}

        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{> topbar}}
                {{!-- End of topbar --}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Usuarios</h1>
                        <a href="list-usuarios" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                            <i class="fas fa-window-close fa-sm text-white-50"></i> Cancelar</a>
                    </div>
                    {{!-- End of Page Heading --}}

                    <!-- Content Row -->
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold" style="color: indigo;">Formulario de Usuarios</h6>
                        </div>
                        <div class="card-body">
                            <div>
                                <form>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="idusuario" class="form-label">ID *</label>
                                            <input type="text" class="form-control" id="idusuario" disabled value="1">
                                        </div>
                                        <div class="col">
                                            <label for="nombre" class="form-label">Nombre de usuario *</label>
                                            <input type="text" class="form-control" id="nombre">
                                            <p id="r0" style="color: red;"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="contrasena" class="form-label">Contraseña *</label>
                                            <input type="password" class="form-control" id="contrasena">
                                            <p id="r1" style="color: red;"></p>
                                        </div>
                                        <div class="col">
                                            <label for="contrasena2" class="form-label">Confirmar contraseña *</label>
                                            <input type="password" class="form-control" id="contrasena2">
                                            <p id="r2" style="color: red;"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="rol">Rol del usuario</label>
                                            <select class="form-control" id="rol">
                                                <option hidden selected value="">Seleccione una opción</option>
                                                <option value="1">Administrador</option>
                                                <option value="2">Usuario</option>
                                            </select>
                                            <p id="s0" style="color: red;"></p>
                                        </div>
                                        <div class="col">
                                            <label for="estado" class="form-label">Estado del usuario *</label>
                                            <select class="form-control" id="estado">
                                                <option hidden selected value="">Seleccione una opción</option>
                                                <option value="1">Activo</option>
                                                <option value="2">Inactivo</option>
                                            </select>
                                            <p id="s1" style="color: red;"></p>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <button type="button" onclick=val()
                                            style="background-color: indigo; color: white" class="btn"
                                            id="btnGuardar">Guardar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{!-- End of DataTales Example --}}

                </div>
            </div>
            {{!-- End of Main Content --}}

            {{> footer}}

        </div>
        {{!-- End of Content Wrapper --}}

    </div>
    {{!-- End of Page Wrapper --}}

    <!-- Scroll to Top Button-->
    {{> arriba}}

    <!-- Logout Modal-->
    {{> logout}}

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/datatables-demo.js"></script>
    </div>

</body>
<script>
    function val() {
        let name = document.getElementById('nombre').value;
        let pass = document.getElementById('contrasena').value;
        let pass2 = document.getElementById('contrasena2').value;
        let rol = document.getElementById('rol').value;
        let estado = document.getElementById('estado').value;
        let o = 0;
        let select = [rol, estado];

        let regex = /^[a-zA-Z0-9\s]*$/;

        if (name != "") {
            if (!name.match(/['\s]/)) {
                if (isNaN(name) == false) {
                    document.getElementById('r0').innerHTML = "El nombre no puede ser un número";
                } else {
                    document.getElementById('r0').innerHTML = ''
                }
            } else {
                document.getElementById('r0').innerHTML = 'El nombre no debe contener espacios';
            }
        } else {
            document.getElementById('r0').innerHTML = "Complete este campo";
        }

        for (i in select) {
            if (select[i] == "") {
                document.getElementById('s' + [i]).innerHTML = 'Seleccione una opción';
            } else {
                document.getElementById('s' + [i]).innerHTML = '';
            }
        }
        if (pass.length > 7) {
            if (pass.match(/[A-Z]/)) {
                if (pass.match(/[\d]../)) {
                    document.getElementById('r1').innerHTML = "";
                } else {
                    document.getElementById('r1').innerHTML = "La contraseña debe tener 3 numeros";
                }
            } else {
                document.getElementById('r1').innerHTML = "La contraseña debe tener una mayuscula";
            }
        } else {
            document.getElementById('r1').innerHTML = "La contraseña debe tener como minimo 8 caracteres";
        }

        if (pass != "") {
            if (pass == pass2) {
                document.getElementById('r2').innerHTML = "";
            } else {
                document.getElementById('r2').innerHTML = "La contraseña no coincide";
            }
        }
    }
</script>

</html>