<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Star⭐Routing - Crear paquetes</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {{> menu}}

        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{> topbar}}
                {{!-- End of topbar --}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Paquetes</h1>
                        <a href="list-paquetes" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                            <i class="fas fa-window-close fa-sm text-white-50"></i> Cancelar</a>
                    </div>
                    {{!-- End of Page Heading --}}

                    <!-- Content Row -->
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold" style="color: indigo;">Formulario de Paquetes</h6>
                        </div>
                        <div class="card-body">
                            <div>
                                <form>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="idpaquete" class="form-label">ID *</label>
                                            <input type="text" class="form-control" id="idpaquete" disabled value="1">
                                        </div>
                                        <div class="col">
                                            <label class="form-label" for="descripcionpaquete">Descripción de paquete
                                                *</label>
                                            <textarea class="form-control" id="descripcionpaquete" rows="2"></textarea>
                                            <p id="r1" style="color: red"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="documentodestinatario" class="form-label">Documento del
                                                destinatario *</label>
                                            <input type="text" class="form-control" id="documentodestinatario">
                                            <p id="r2" style="color: red"></p>
                                        </div>
                                        <div class="col">
                                            <label for="nombredestinatario" class="form-label">Nombre del destinatario
                                                *</label>
                                            <input type="text" class="form-control" id="nombredestinatario">
                                            <p id="nombre0" style="color: red"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="apellidodestinatario" class="form-label">Apellido del
                                                destinatario *</label>
                                            <input type="text" class="form-control" id="apellidodestinatario">
                                            <p id="nombre1" style="color: red"></p>
                                        </div>
                                        <div class="col">
                                            <label for="direccionstinatario" class="form-label">Dirección del
                                                destinatario *</label>
                                            <input type="text" class="form-control" id="direcciondestinatario">
                                            <p id="r3" style="color: red"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="telefonodestinatario" class="form-label">Teléfono del
                                                destinatario *</label>
                                            <input type="text" class="form-control" id="telefonodestinatario">
                                            <p id="r4" style="color: red"></p>
                                        </div>
                                        <div class="col">
                                            <label for="emaildestinatario" class="form-label">Correo del destinatario
                                                *</label>
                                            <input type="email" class="form-control" id="emaildestinatario">
                                            <p id="r5" style="color: red"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="documento empleado" class="form-label">Documento del empleado
                                                *</label>
                                            <input type="text" class="form-control" id="documentoempleado"
                                                value="100000000" disabled>

                                        </div>
                                        <div class="col">
                                            <label for="tipopaquete">Tipo de paquete *</label>
                                            <select class="form-control" id="tipopaquete">
                                                <option value="0" hidden selected>Seleccione una opción</option>
                                                <option value="1">Bolsa</option>
                                                <option value="2">Paquete</option>
                                                <option value="3">Sobre</option>
                                            </select>
                                            <p id="r6" style="color: red"></p>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="estadopaquete">Estado del paquete *</label>
                                            <select class="form-control" id="estadopaquete">
                                                <option value="0" hidden selected>Seleccione una opción</option>
                                                <option value="1">En bodega</option>
                                                <option value="2">En ruta</option>
                                                <option value="3">Entregado</option>
                                            </select>
                                            <p id="r7" style="color: red"></p>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <a type="submit" onclick=val() style="background-color: indigo; color: white"
                                            class="btn" id="btnGuardar">Guardar</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{!-- End of DataTales Example --}}

                </div>
            </div>
            {{!-- End of Main Content --}}

            {{> footer}}

        </div>
        {{!-- End of Content Wrapper --}}

    </div>
    {{!-- End of Page Wrapper --}}

    <!-- Scroll to Top Button-->
    {{> arriba}}

    <!-- Logout Modal-->
    {{> logout}}

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/datatables-demo.js"></script>
    </div>

</body>

<script>

    function val() {
        let descripcionpaquete = document.getElementById('descripcionpaquete').value.trim();
        let documentodestinatario = document.getElementById('documentodestinatario').value;
        let nombredestinatario = document.getElementById('nombredestinatario').value;
        let apellidodestinatario = document.getElementById('apellidodestinatario').value;
        let direcciondestinatario = document.getElementById('direcciondestinatario').value.trim();
        let telefonodestinatario = document.getElementById('telefonodestinatario').value;
        let emaildestinatario = document.getElementById('emaildestinatario').value;
        let tipopaquete = document.getElementById('tipopaquete').value;
        let estadopaquete = document.getElementById('estadopaquete').value;

        let regex = /^[a-zA-Z0-9\s]*$/;

        let nombres = [nombredestinatario, apellidodestinatario];

        if (descripcionpaquete == "") {
            document.getElementById("r1").innerHTML = "Ingrese una descripción";
        } else {
            if (!regex.test(descripcionpaquete)) {
                document.getElementById("r1").innerHTML = "No se permiten caracteres especiales";
            } else {
                document.getElementById("r1").innerHTML = "";
            }
        }

        if (documentodestinatario != "") {
            if (!documentodestinatario.match(/['\s]/)) {
                if (isNaN(documentodestinatario) == true) {
                    document.getElementById('r2').innerHTML = 'El documento debe ser un número'
                } else {
                    if (!regex.test(documentodestinatario)) {
                        document.getElementById('r2').innerHTML = "No se permiten caracteres especiales";
                    } else {
                        document.getElementById('r2').innerHTML = ''
                    }
                }
            } else {
                document.getElementById('r2').innerHTML = 'El documento no debe contener espacios';
            }
        } else {
            document.getElementById('r2').innerHTML = "Complete este campo";
        }

        for (i in nombres) {
            if (nombres[i] != "") {
                if (!nombres[i].match(/['\s]/)) {
                    if (!regex.test(nombres[i])) {
                        document.getElementById('nombre' + [i]).innerHTML = "No se permiten caracteres especiales";
                    } else {
                        document.getElementById('nombre' + [i]).innerHTML = '';
                    }
                }
                else {
                    document.getElementById('nombre' + [i]).innerHTML = 'El nombre no debe contener espacios';
                }
            } else {
                document.getElementById('nombre' + [i]).innerHTML = "Complete este campo";
            }
        }

        if (direcciondestinatario == "") {
            document.getElementById('r3').innerHTML = "Complete este campo";
        }

        if (telefonodestinatario != "") {
            if (!telefonodestinatario.match(/['\s]/)) {
                if (isNaN(telefonodestinatario)) {
                    document.getElementById('r4').innerHTML = 'El telefono solo debe tener numeros'
                } else {
                    if (!regex.test(telefonodestinatario)) {
                        document.getElementById('r4').innerHTML = "No se permiten caracteres especiales";
                    } else {
                        if (telefonodestinatario.length < 10 || telefonodestinatario.length > 10) {
                            document.getElementById('r4').innerHTML = 'El telefono debe tener 10 digitos'
                        } else {
                            document.getElementById('r4').innerHTML = ''
                        }
                    }
                }
            } else {
                document.getElementById('r4').innerHTML = 'El telefono no debe contener espacios';
            }
        } else {
            document.getElementById('r4').innerHTML = "Complete este campo";
        }

        if (emaildestinatario != "") {
            if (!emaildestinatario.match(/['\s]/)) {
                let expresion = /\w+@\w+\.+[a-z]/;
                if (!expresion.test(emaildestinatario)) {
                    document.getElementById('r5').innerHTML = 'El correo no es valido - example@example.com';
                } else {
                    document.getElementById('r5').innerHTML = '';
                }
            } else {
                document.getElementById('r5').innerHTML = 'El correo no debe contener espacios';
            }
        } else {
            document.getElementById('r5').innerHTML = 'Complete este campo';
        }


        if (tipopaquete == 0) {
            document.getElementById('r6').innerHTML = 'Seleccione una opción';
        } else {
            document.getElementById('r6').innerHTML = '';
        };

        if (estadopaquete == 0) {
            document.getElementById('r7').innerHTML = 'Seleccione una opción';
        } else {
            document.getElementById('r7').innerHTML = '';
        };

    }




</script>